// Cavvy 0.4.3.0 新特性综合测试
// - var/let 后置类型声明
// - auto 自动类型推断

public class Test043Features {
    public static int main(String[] args) {
        println("=== Cavvy 0.4.3.0 Feature Test ===");
        
        // 测试1: var 后置类型声明
        println("1. Testing var declaration:");
        var count: int = 5;
        println(count);
        
        // 测试2: let 后置类型声明
        println("2. Testing let declaration:");
        let id: int = 1001;
        println(id);
        
        // 测试3: auto 类型推断
        println("3. Testing auto inference:");
        auto num = 123;
        auto flag = true;
        auto ch = 'Z';
        println(num);
        println(flag);
        println(ch);
        
        // 测试4: 混合使用
        println("4. Testing mixed usage:");
        int oldStyle = 1;
        var newStyle: int = 2;
        auto inferred = 3;
        let letStyle: int = 4;
        int sum = oldStyle + newStyle + inferred + letStyle;
        println(sum);
        
        // 测试5: 表达式中使用
        println("5. Testing in expressions:");
        var x: int = 10;
        auto y = 20;
        let z: int = x + y;
        auto result = z * 2;
        println(result);
        
        println("=== All Tests Passed! ===");
        return 0;
    }
}
