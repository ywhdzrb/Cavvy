// 测试 auto 自动类型推断
// Cavvy 0.4.3.0 新增特性

public class TestAutoInference {
    public static int main(String[] args) {
        // auto 自动推断为 int
        auto a = 42;
        
        // auto 自动推断为 bool
        auto flag = true;
        
        // auto 自动推断为 char
        auto c = 'X';
        
        // 打印结果验证
        println("Testing auto type inference:");
        println(a);
        println(flag);
        println(c);
        
        // 算术运算
        auto result = a + 8;  // 应该推断为 int
        println(result);
        
        return 0;
    }
}
