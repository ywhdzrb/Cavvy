// 测试数组零初始化功能
// 使用 new Type[size]() 语法或依赖 calloc 自动零初始化

public class Main {
    public static void main(string[] args) {
        // 测试一维数组零初始化
        int[] arr1 = new int[5]();
        println("Zero-initialized int array:");
        
        // 手动展开循环以避免变量名冲突
        print(arr1[0]); print(" ");
        print(arr1[1]); print(" ");
        print(arr1[2]); print(" ");
        print(arr1[3]); print(" ");
        print(arr1[4]); print(" ");
        println("");
        
        // 测试 long 数组零初始化
        long[] arr2 = new long[3]();
        println("\nZero-initialized long array:");
        print(arr2[0]); print(" ");
        print(arr2[1]); print(" ");
        print(arr2[2]); print(" ");
        println("");
        
        // 测试不使用()语法（calloc仍然零初始化）
        int[] arr3 = new int[3];
        println("\nArray without () (still zero-init):");
        print(arr3[0]); print(" ");
        print(arr3[1]); print(" ");
        print(arr3[2]); print(" ");
        println("");
        
        // 验证数组确实被零初始化
        if (arr1[0] == 0 && arr1[1] == 0 && arr1[2] == 0) {
            println("\nZero initialization test PASSED!");
        } else {
            println("\nZero initialization test FAILED!");
        }
    }
}
